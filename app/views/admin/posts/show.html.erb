<h1>投稿詳細画面</h1>

<div>
  <%= image_tag @end_user.get_profile_image(100, 100) %><br>
  <%= @end_user.name %><br>
  <%= @end_user.introduction %><br>
  <%= link_to "設定", edit_admin_end_user_path(@end_user.id), class: "btn btn-secondary" %>
</div>

<h3>play game</h3>

<% @game_bookmarks.each do |game| %>
  <%= link_to admin_community_path(game.id) do %>
    <%= image_tag game.get_image %>
  <% end %>
<% end %>

<%= @post.title %>
<% if @post.is_deleted == false %>
  <%= link_to "削除", admin_post_path(@post.id), method: :delete, "data-confirm" => "本当に投稿を削除してよろしいですか？", class: "btn btn-danger" %>
<% else %>
  削除済
<% end %><br>
<%= link_to admin_community_path(@post.community.id) do %>
  <%= @post.community.name %>
<% end %>
<% @post.post_tags.all.each do |post_tag| %>
  <%= post_tag.tag.name %>
<% end %><br>
<%= @post.text %>

<div><%= @post.likes.count %>いいね</div>
<div><%= @comments.count %>コメント</div>


<div>
  <% @post.comments.all.each do |comment| %>
    <%= image_tag comment.end_user.get_profile_image(50, 50) %>
    <%= comment.end_user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %>
    <% if comment.is_deleted == false %>
      <%= link_to "削除", admin_post_comment_path(comment.post.id, comment.id), method: :delete, "data-confirm" => "本当に削除してよろしいですか？", class: "btn btn-danger" %>
    <% else %>
      削除済
    <% end %>
    <div>
      <%= comment.text %>
    </div>
  <% end %>
</div>
