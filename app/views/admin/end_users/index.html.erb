<div class="container-fluid mb-4">
  <div class="col-9 mx-auto">
    <h2 class="ttl_center4">ユーザ一覧</h2>
    <table class="table" border="1" style="border-collapse: collapse">
      <thead>
        <th width="80">id</th>
        <th>ニックネーム</th>
        <th width="300">メールアドレス</th>
        <th width="150">投稿数</th>
        <th width="150">会員ステータス</th>
        <th width="100"></th>
      </thead>
      <tbody>
        <% @end_users.each do |end_user| %>
          <tr>
            <td><%= end_user.id %></td>
            <td>
              <%= link_to admin_end_user_path(end_user.id), class: "text-dark" do %>
                <%= image_tag end_user.get_profile_image(100,100), class: "img-fluid mini-img" %>
                <%= end_user.name %>
              <% end %>
            </td>
            <td><%= end_user.email %></td>
            <td align="center"><%= end_user.posts.count %></td>
            <td align="center">
              <% if end_user.is_active == true %>
                <div class="text-success font-weight-bold">会員</div>
              <% else %>
                <div class="text-danger font-weight-bold">退会</div>
              <% end %>
            </td>
            <td align="center"><%= link_to "編集", edit_admin_end_user_path(end_user.id), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @end_users %>
  </div>
</div>

