<h1>ユーザ一覧</h1>

<table class="table" border="1" style="border-collapse: collapse">
  <thead>
    <th>id</th>
    <th>ニックネーム</th>
    <th>メールアドレス</th>
    <th>投稿数</th>
    <th>会員ステータス</th>
  </thead>
  <tbody>
    <% @end_users.each do |end_user| %>
      <tr>
        <td><%= end_user.id %></td>
        <td>
          <%= link_to admin_end_user_path(end_user.id) do %>
            <%= end_user.name %>
          <% end %>
        </td>
        <td><%= end_user.email %></td>
        <td><%= end_user.posts.count %></td>
        <td>
          <% if end_user.is_active == true %>
            有効
          <% else %>
            退会
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @end_users %>
