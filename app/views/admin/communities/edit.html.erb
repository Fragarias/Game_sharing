<h1>コミュニティ編集画面</h1>

<%= form_with model: @community, url: admin_community_path(@community.id), method: :patch, local: true do |f| %>
  <div>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div>
    <label>ゲームタイトル</label>
    <%= f.text_field :name, size: "40" %><br>
    <label>ゲーム概要</label>
    <%= f.text_area :overview, size: "40×60" %>
  </div>
  <%= f.submit "更新", class: "btn btn-success" %>
<% end %>
