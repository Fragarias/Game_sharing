<div class="container-fluid">
  <div class="col-5 mx-auto mt-4 mb-5">
    <h2 class="ttl_center4"><%= @community.name %>編集画面</h2>

    <%= form_with model: @community, url: admin_community_path(@community.id), method: :patch, local: true do |f| %>
      <div class="form-group px-5">
        <%= f.label "Image" %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-group px-5">
        <%= f.label "ゲームタイトル" %>
        <%= f.text_field :name, size: "50" %>
      </div>
      <div class="form-group px-5">
        <%= f.label "概要" %>
        <%= f.text_area :overview, style: "width:100%", rows: "4" %>
      </div>
      <div style="text-align:center">
        <%= f.submit "更新", class: "simple-button" %>
      </div>
    <% end %>
  </div>
</div>
