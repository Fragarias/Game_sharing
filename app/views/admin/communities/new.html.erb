<div class="container-fluid">
  <div class="col-5 mx-auto mt-4 mb-5">
    <h2 class="ttl_center4">コミュニティ新規登録画面</h2>

    <%= form_with model: @community, url: admin_communities_path do |f| %>
      <div class="form-group px-5">
        <%= f.label :image %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-group px-5">
        <%= f.label :name %>
        <%= f.text_field :name, autocomplete: "community.name", placeholder: "ゲーム名を入力してください。", size: "50" %>
      </div>
      <div class="form-group px-5">
        <%= f.label :overview %>
        <%= f.text_area :overview, autocomplete: "community.overview", placeholder: "ゲーム概要", style: "width:100%", rows: "4" %>
      </div>
      <div style="text-align:center">
        <%= f.submit "登録", class: "simple-button" %>
      </div>
    <% end %>

  </div>
</div>
