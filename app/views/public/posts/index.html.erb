<h1>フォロー中投稿一覧</h1>

<%= render 'public/end_users/user', end_user: @end_user %>

<% @posts.each do |post| %>
  <div class="card mb-3" style="max-width: 18rem;">
    <h2 class="card-header">
      <%= link_to post_path(post.id) do %>
        <%= post.title %>
      <% end %>
    </h2>
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to community_path(post.community.id) do %>
          <%= post.community.name %>
        <% end %>
        <% post.post_tags.all.each do |post_tag| %>
          <%= post_tag.tag.name %>
        <% end %>
      </h5>
      <% if post.post_image.attached? %>
        <%= image_tag post.get_post_image(200, 200) %>
      <% end %>
      <p class="card-text">
        <%= post.text %>
      </p>
    </div>
    <div class="card-footer">
      <%= link_to end_user_path(post.end_user.id) do %>
        <%= post.end_user.name %>
      <% end %>
    </div>
  </div>
<% end %>
