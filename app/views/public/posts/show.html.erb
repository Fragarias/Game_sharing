<h1>投稿詳細画面</h1>

<%= render 'public/end_users/user', end_user: @end_user %>

<h2>
  <%= @post.title %>
</h2>
<% if @post.post_image.attached? %>
  <%= image_tag @post.get_post_image(300, 300) %>
<% end %>
<% if @post.end_user == current_end_user %>
  <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-success" %>
  <%= link_to "削除", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除してよろしいですか？" %>
<% end %><br>
<%= link_to community_path(@post.community.id) do %>
  <%= @post.community.name %>
<% end %>
<% @post.post_tags.all.each do |post_tag| %>
  <%= post_tag.tag.name %>
<% end %><br>
<%= @post.text %><br>

<div>
  <% if @post.liked_by?(current_end_user) %>
    <div>
      <%= link_to post_likes_path(@post.id), method: :delete do %>
        ❤<%= @post.likes.count %>いいね
      <% end %>
    </div>
  <% else %>
    <div>
      <%= link_to post_likes_path(@post.id), method: :post do %>
        ♡<%= @post.likes.count %>いいね
      <% end %>
    </div>
  <% end %>
</div>
<div>
  <%= @comments.count %>コメント
</div>

<div>
  <% @comments.each do |comment| %>
    <%= image_tag comment.end_user.get_profile_image(50, 50) %>
    <%= comment.end_user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %>
    <% if current_end_user == comment.end_user || current_end_user == comment.post.end_user %>
      <%= link_to "削除", post_comment_path(comment.post.id, comment.id), method: :delete, "data-confirm" => "本当に削除してよろしいですか？", class: "btn btn-danger" %>
    <% end %><br>
    <div>
      <%= comment.text %>
    </div>
  <% end %>
</div>
<div>
  <%= form_with model: [@post, @comment], url: post_comments_path(@post.id), method: :post do |f| %>
    <%= f.text_field :text, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信" %>
  <% end %>
</div>
