<div class="container-fluid">
  <div class="col-5 mx-auto mt-4 mb-5">
    <h2 class="ttl_center4">会員情報編集</h2>

    <%= form_with model: @end_user, url: end_users_update_path do |f| %>
      <div class="form-group px-5">
        <%= f.label "プロフィール画像" %>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="form-group px-5">
        <%= f.label "ニックネーム" %>
        <%= f.text_field :name, size: "50" %>
      </div>
      <div class="form-group px-5">
        <%= f.label "Eメール" %>
        <%= f.email_field :email, autocomplete: "email", size: "50" %>
      </div>
      <div class="form-group px-5">
        <%= f.label "自己紹介文" %>
        <%= f.text_area :introduction, style: "width:100%", rows: "4" %>
      </div>
      <div class="row justify-content-around mt-3 py-2">
        <div class="col-3">
          <%= f.submit "更新", class: "simple-button" %>
        </div>
        <div class="col-3">
          <%= link_to "退会する", end_users_quit_path, class: "danger-button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
