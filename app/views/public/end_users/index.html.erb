<div class="container-fluid">
  <div class="col-9 mx-auto">
    <h2 class="ttl_center4">ユーザ一覧</h2>
    <div class="row justify-content-center mb-3">
      <div class="col-3">
        <%= render 'user', end_user: @end_user %>
      </div>
      <div class="col-5">
        <% @end_users.each do |end_user| %>
          <div class="d-flex py-3">
            <div class="mx-2">
              <%= link_to end_user_path(end_user.id), class: "text-dark" do %>
                <%= image_tag end_user.get_profile_image(200, 200), class: "img-fluid icon-img mr-2" %>
                <%= end_user.name %>
              <% end %>
            </div>
            <div class="ml-auto">
              <% if end_user != current_end_user %>
                <% if current_end_user.following?(current_end_user, end_user) %>
                  <%= link_to "フォロー済", end_user_relationships_path(end_user.id), method: :delete, class: "simple-button ml-3" %>
                <% else %>
                  <%= link_to "フォローする", end_user_relationships_path(end_user.id), method: :post, class: "simple-button ml-3" %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <%#= paginate @end_users %>
  </div>
</div>
