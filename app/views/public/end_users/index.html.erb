<div class="container-fluid">
  <div class="col-lg-9 mx-auto">
    <div class="row justify-content-center mb-3">
      <% if end_user_signed_in? %>
        <div class="col-lg-4 col-md-5">
          <%= render 'user', end_user: current_end_user %>
        </div>
      <% end %>
      <div class="col-lg-6 offset-lg-1 col-md-8">
        <h2 class="ttl_center4">ユーザ</h2>
        <% @end_users.each do |end_user| %>
          <div class="d-flex py-3">
            <div class="mx-2">
              <%= link_to end_user_path(end_user.id), class: "text-dark" do %>
                <%= image_tag end_user.get_profile_image(200, 200), class: "img-fluid icon-img mr-2" %>
                <%= end_user.name %>
              <% end %>
            </div>
            <% if end_user_signed_in? %>
              <div class="ml-auto">
                <div class="mypage-follow-contents-<%= end_user.id %>">
                  <% @end_user = end_user %>
                  <%= render 'public/relationships/follow', lacals: {end_user: @end_user} %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
