<div class="container px-5 px-sm-0">
  <div class="row m-3 pt-3">
    <div class="col-2">
      <h4 class="bg text-center">ログイン</h4>
    </div>
  </div>
  <div class="row m-3">
    <div class="col-4 ml-5">
      <h5 class="bg text-center">会員の方はこちらからログイン</h5>
    </div>
  </div>
  <%= form_with model: @end_user, url: end_user_session_path do |f| %>
    <div class="row justify-content-center py-1">
      <label class="col-sm-2 col-form-label">メールアドレス</label>
      <%= f.email_field :email, autocomplete: "email", placeholder: "sample@exampl", size: 50 %>
    </div>
    <div class="row justify-content-center py-1">
      <label class="col-sm-2 col-form-label">パスワード</label>
      <%= f.password_field :password, autocomplete: "current-password", size: 50 %>
    </div>
    <div class="row m-3 pt-3" align="center">
      <div class="col">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  <div class="row m-3 pt-3" align="center">
      <%= link_to 'ゲストログイン（閲覧用）', end_users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
  </div>

  <div class="row m-3 pt-3">
    <div class="col-4 ml-5">
      <h5 class="bg text-center">会員登録がお済みでない方</h5>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-7">
      <%= link_to new_end_user_registration_path do %>
        新規登録へ
      <% end %>
    </div>
  </div>
</div>


