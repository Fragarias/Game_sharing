<div class="container-fluid">
  <div class="col-9 mx-auto">
    <h2 class="ttl_center4">フォロー一覧</h2>
    <div class="row justify-content-center mb-3">

      <div class="col-3">
        <div class="card mx-auto mb-3" style="max-width: 18rem;">
          <%= image_tag @end_user.get_profile_image(500, 500), class: "img-fluid" %>
          <div class="card-body">
            <h3 class="card-title"><%= @end_user.name %></h3>
            <p class="card-text"><%= @end_user.introduction %></p>
          </div>
        </div>
        <div class="card mx-auto" style="max-width: 18rem;">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <%= link_to "フォロー中：#{@end_user.followings.count}", end_user_relationships_path(@end_user.id), class: "text-dark" %>
            </li>
            <li class="list-group-item">
              <%= link_to "フォロワー：#{@end_user.followers.count}", end_user_relationships_path(@end_user.id, followers_id: @end_user.id), class: "text-dark" %>

            </li>
          </ul>
        </div>
      </div>

      <div class="col-5">
        <% @end_users.each do |end_user| %>
          <div class="d-flex align-item-center py-3">
            <div class="mx-2">
              <%= link_to end_user_path(end_user.id), class: "text-dark" do %>
                <%= image_tag end_user.get_profile_image(200, 200), class: "img-fluid icon-img mr-2" %>
                <%= end_user.name %>
              <% end %>
            </div>
            <div class="ml-auto">
              <div class="mypage-follow-contents-<%= end_user.id %>">
                <% @end_user = end_user %>
                <%= render 'follow', lacals: {end_user: @end_user} %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

