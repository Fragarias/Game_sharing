<div class="container-fluid">
  <div class="col-lg-9 mx-auto mb-3">
    <h2 class="ttl_center4">コミュニティ一覧</h2>

    <div class="row">
      <% @communities.each do |community| %>
        <div class="col-lg-6 mb-2">
          <div class="card mx-auto mb-3" style="max-width: 540px;">
            <div class="row no-gutters">
              <div class="col-md-5">
                <%= image_tag community.get_image(500, 500), class: "img-fluid community_card-img" %>
              </div>
              <div class="col-md-7">
                <div class="card-body">
                  <h4 class="card-title">
                    <%= link_to community_path(community.id), class: "text-dark" do %>
                      <%= community.name %>
                    <% end %>
                  </h4>
                  <p class="card-text p-2">
                    <%= community.overview %>
                  </p>
                  <p class="card-text mb-0"><small class="text-muted">ブックマーク登録者数:<%= community.game_bookmarks.count %></small></p>
                  <p class="card-text"><small class="text-muted">投稿数:<%= community.posts.count %></small></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @communities %>
  </div>
</div>
