<div class="container">
  <h1>ゲーム一覧</h1>

  <div class="row">
    <% @communities.each do |community| %>
      <div class="col-md-6 col-lg-4 mb-2">
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row no-gutters">
            <div class="col-md-5">
              <%= image_tag community.get_image(500, 500), class: "img-fluid community_card-img" %>
            </div>
            <div class="col-md-7">
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to community_path(community.id) do %>
                    <%= community.name %>
                  <% end %>
                </h5>
                <p class="card-text">
                  <%= community.overview %>
                </p>
                <!--<p class="card-text"><small class="text-muted">最終更新3分前</small></p>-->
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= paginate @communities %>

</div>